@model IEnumerable<A_Very_Simple_HIS.ViewModels.VisitViewModel>

@{
    ViewData["Title"] = "Index";
}

<section class="full-height">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4 ">
            <h1 class="m-0">Appointments</h1>
            <div class="align-self-end mb-2">
                <a class="btn-brand bg-secondary text-light" asp-action="Create">Add a visit</a>
            </div>
        </div>
        <table id="tableData" class="table">
            <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Doctor Name</th>
                    <th>Visit Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</section>

@section Scripts {
    <script src="~/js/visits.js"></script>
}
